@model Publisher

@{
	ViewData["Title"] = "Potvrzení smazání nakladatelství";
}

<div class="row text">
	<div class="container-fluid col-md-8">
		<p>
			<h1>Potvrzení smazání nakladatelství @Model.Name</h1>
		</p>
		<div class="row">
			<div class="col-md-6 offset-2">
				
					<div class="mb-3 text-center">
						<img class="border-info" style="max-width:150px" id="LogoPreview" />
					</div>
					<div class="mb-3">
						<label asp-for="Logo" class="control-label"></label>
						<input asp-for="Logo" class="form-control" readonly>
						<span asp-validation-for="Logo" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Name" class="control-label"></label>
						<input asp-for="Name" class="form-control" readonly>
						<span asp-validation-for="Name" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<label asp-for="Description" class="control-label"></label>
						<input asp-for="Description" class="form-control" readonly>
						<span asp-validation-for="Description" class="text-danger"></span>
					</div>
					<div class="mb-3">
						<form asp-action="Delete">
							<input type="hidden" asp-for="Id">
							<input type="submit" value="Smazat" class="btn btn-danger float-end" />
						</form>
						
						<a class="btn btn-outline-secondary" asp-action="Index">Zobrazit nakladatele</a>
						<div>
						</div>
					</div>
			</div>
		</div>
	</div>

	@section Scripts {
		<script>
			$(document).ready(function () {
				var output = document.getElementById('LogoPreview');
				output.src = $("#Logo").val();
			})
		</script>
	}
