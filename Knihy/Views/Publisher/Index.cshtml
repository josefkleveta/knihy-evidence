@model IEnumerable<Publisher>
@{
	ViewData["Title"] = "Seznam nakladatelství";
}
<h1>Seznam nakladatelství</h1>
<div class="row">
	<div class="col-md-8 offset-md-2">

		<table class="table">
			<thead>
				<tr>
					<th></th>
					<th>Název</th>
					<th>Představení</th>
					<th>Úpravy</th>
				</tr>
			</thead>
			<tbody>
				@foreach (var item in Model) {
					<tr>
						<td class="align-middle">
							<img src="@item.Logo" alt="@item.Name" style="max-height:150px" />
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Name)
						</td>
						<td class="align-middle">
							@Html.DisplayFor(modelItem => item.Description)
						</td>
						<td class="align-middle">
							<a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@item.Id"><i class="bi bi-pencil-square"></i>Upravit</a> |
							<a class="btn btn-outline-info" asp-action="Details" asp-route-id="@item.Id"><i class="bi bi-eye"></i>Detaily</a> |
							<a class="btn btn-danger text-white" asp-action="Delete" asp-route-id="@item.Id"><i class="bi bi-trash"></i>Smazat</a>
						</td>
					</tr>
				}
			</tbody>

		</table>

	</div>
</div>

@await Html.PartialAsync("_CreateItem", "Publisher")
